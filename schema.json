    {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Conversation Schema",
        "description": "Schema for a conversation between two speakers.",
        "type": "object",
        "properties": {
            "speakers": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the speaker."
                        },
                        "voice": {
                            "type": "string",
                            "description": "The voice to be used for the speaker."
                        }
                    },
                    "required": [
                        "name",
                        "voice"
                    ]
                }
            },
            "instructions": {
                "type": "string",
                "description": "Instructions for reading the conversation."
            },
            "conversation": {
                "type": "string",
                "description": "The full text of the conversation."
            }
        },
        "required": [
            "speakers",
            "instructions",
            "conversation"
        ]
    }